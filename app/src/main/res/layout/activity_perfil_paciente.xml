<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".controller.PerfilPaciente">

    <!-- CONTENIDO PRINCIPAL -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/main"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/fondo"
            android:padding="10dp">

            <!-- ICONO MENÚ -->
            <ImageView
                android:id="@+id/menu_icon"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_margin="16dp"
                android:layout_gravity="start"
                android:src="@drawable/img_1"
                android:clickable="true"
                android:focusable="true"
                android:contentDescription="Menú" />

            <!-- CARD DE PERFIL -->
            <com.google.android.material.card.MaterialCardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="16dp"
                app:cardElevation="4dp"
                android:backgroundTint="@color/white"
                android:layout_marginHorizontal="10dp"
                android:layout_marginTop="10dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:background="@color/white"
                    android:padding="10dp">

                    <!-- FOTO Y NOMBRE -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/perfil_foto" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Morgan James"
                            android:textColor="@color/black"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textSize="20sp" />
                    </LinearLayout>

                    <!-- SECCIÓN PERFIL -->
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="PERFIL"
                        android:fontFamily="sans-serif-condensed-medium"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"
                        android:layout_marginVertical="8dp" />

                    <!-- DATOS -->
                    <!-- Dependencia -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/cara" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="DEPENDENCIA:"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/txtDependencia"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Alzhaimer"
                            android:textColor="@color/gris"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <!-- Fecha de nacimiento -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/fecha" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="FECHA DE NACIMIENTO:"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/txtFechaNacimiento"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="12/07/84"
                            android:textColor="@color/gris"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <!-- Sexo -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/genero" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="SEXO:"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/txtGenero"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Masculino"
                            android:textColor="@color/gris"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <!-- Edad -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginVertical="6dp">

                        <ImageView
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:src="@drawable/cumple" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="EDAD:"
                            android:fontFamily="sans-serif-condensed-medium"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:layout_marginHorizontal="4dp" />

                        <TextView
                            android:id="@+id/txtEdad"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="88"
                            android:textColor="@color/gris"
                            android:textSize="20sp"
                            android:fontFamily="sans-serif-black" />
                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="#000"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="16dp" />

                    <!-- Botón Editar -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center">

                        <com.google.android.material.card.MaterialCardView
                            android:id="@+id/boton"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="30dp"
                            app:cardBackgroundColor="@color/blue"
                            app:cardElevation="8dp"
                            android:layout_margin="16dp"
                            android:clickable="true"
                            android:focusable="true">

                            <LinearLayout
                                android:id="@+id/btnEditar"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal"
                                android:paddingHorizontal="15dp"
                                android:paddingVertical="5dp"
                                android:gravity="center">

                                <TextView
                                    android:id="@+id/boton_texto"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Editar"
                                    android:textColor="@android:color/black"
                                    android:textStyle="bold"
                                    android:textSize="20sp" />

                                <ImageView
                                    android:id="@+id/boton_imagen"
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:src="@drawable/editar"
                                    android:layout_marginLeft="6dp" />
                            </LinearLayout>
                        </com.google.android.material.card.MaterialCardView>
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>
        </LinearLayout>
    </ScrollView>

    <!-- MENÚ LATERAL -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/dark_blue">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/perfil_foto"
                android:contentDescription="User Profile" />

            <Button
                android:id="@+id/btnPerfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/btnNotas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrar notas"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/btnRegitroPaciente"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrar Paciente"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btnPerfilPaciente"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Perfil paciente"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />
            <Button
                android:id="@+id/btnRecordatorio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Recordatorio"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Logout"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp" />
        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>
</androidx.drawerlayout.widget.DrawerLayout>
