<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".editarPerfil"
    android:orientation="vertical"
    android:background="@drawable/fondo">

    <ImageView
        android:layout_width="33dp"
        android:layout_height="33dp"
        android:src="@drawable/menu"
        android:layout_marginTop="13dp"
        android:layout_marginLeft="21dp"
        android:layout_marginBottom="12dp"/>
    <LinearLayout
        android:layout_width="379dp"
        android:layout_height="769dp"
        android:layout_gravity="center"
        android:background="@drawable/esquinas"
        android:orientation="vertical">

        <ImageView
            android:layout_width="118dp"
            android:layout_height="114dp"
            android:layout_gravity="center"
            android:layout_marginTop="47dp"
            android:src="@drawable/morgan" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="Morgan James"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Editar Perfil"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lineamenu"
            android:layout_gravity="center"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Usuario:"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="28dp"
            android:background="@color/azulEditText"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/edtUsuario"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Usuario:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingEnd="36dp"
                android:inputType="text"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/editar" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Contacto:"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="28dp"
            android:background="@color/azulEditText"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/edtCotacto"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="Contacto:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingEnd="36dp"
                android:inputType="text"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/editar" />

        </RelativeLayout>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="12dp"
            android:text="Email:"
            android:textColor="@color/black"
            android:textSize="22dp"
            android:textStyle="bold"/>

        <RelativeLayout
            android:layout_width="348dp"
            android:layout_height="28dp"
            android:background="@color/azulEditText"
            android:padding="6dp"
            android:layout_gravity="center"
            android:layout_marginTop="2dp">

            <EditText
                android:id="@+id/edtEmail"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:background="@android:color/transparent"
                android:hint="EmaiL:"
                android:textStyle="bold"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:paddingEnd="36dp"
                android:inputType="text"
                android:gravity="center_vertical"/>

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:src="@drawable/editar" />

        </RelativeLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/lineamenu"
            android:layout_gravity="center"
            android:layout_marginTop="12dp"/>

        <Button
            android:id="@+id/guardarcambios"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="GUARDAR"
            android:textSize="22dp"
            android:textStyle="bold"
            android:layout_gravity="center"
            android:backgroundTint="@color/azulbuttonmenu"
            android:textColor="@color/black"
            android:layout_marginTop="24dp"/>




    </LinearLayout>





    </LinearLayout>