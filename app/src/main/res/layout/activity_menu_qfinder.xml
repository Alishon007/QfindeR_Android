<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MenuQfinder"
    tools:openDrawer="start">

    <!-- Contenedor principal (Toolbar + contenido de navegación) -->
    <androidx.coordinatorlayout.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <!-- Incluye la barra de acción (Toolbar) -->
        <include
            android:id="@+id/appBarMenuQfinder"
            layout="@layout/app_bar_menu_qfinder" />

        <!-- Contenedor principal de la navegación -->
        <androidx.fragment.app.FragmentContainerView
            android:id="@+id/nav_host_fragment_content_menu_qfinder"
            android:name="androidx.navigation.fragment.NavHostFragment"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:defaultNavHost="true"
            app:navGraph="@navigation/mobile_navigation" />

    </androidx.coordinatorlayout.widget.CoordinatorLayout>

    <!-- Menú lateral -->
    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        app:menu="@menu/activity_main_drawer"
        app:headerLayout="@layout/nav_header_menu_qfinder"/>
</androidx.drawerlayout.widget.DrawerLayout>
