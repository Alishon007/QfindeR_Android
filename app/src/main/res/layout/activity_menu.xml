<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Menu"
    android:background="@drawable/fondo">


    <com.google.android.material.navigation.NavigationView
        android:id="@+id/navigationView"
        android:layout_width="250dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:background="@color/azul_menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:paddingTop="50dp">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/perfil_foto"
                android:contentDescription="User Profile"
                android:elevation="10dp"
                android:translationZ="8dp"/>




            <Button
                android:id="@+id/btnPerfil"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Perfil"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:elevation="120dp"
                android:translationZ="8dp"/>

            <Button
                android:id="@+id/btnNotas"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrar notas"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:elevation="120dp"
                android:translationZ="8dp"/>

            <Button
                android:id="@+id/btnRegitroPaciente"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Registrar paciente"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:elevation="120dp"
                android:translationZ="8dp"/>

            <Button
                android:id="@+id/btnRecordatorio"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Recordatorio"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                tools:ignore="TextContrastCheck"
                android:elevation="120dp"
                android:translationZ="8dp"/>

            <Button
                android:id="@+id/btnLogout"
                android:layout_width="200dp"
                android:layout_height="wrap_content"
                android:text="Cerrar SesiÃ³n"
                android:background="@drawable/button_style"
                android:textColor="@android:color/white"
                android:layout_marginTop="30dp"
                android:elevation="120dp"
                android:translationZ="8dp"/>

        </LinearLayout>
    </com.google.android.material.navigation.NavigationView>

</LinearLayout>